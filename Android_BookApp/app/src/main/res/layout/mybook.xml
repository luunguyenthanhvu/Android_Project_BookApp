<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="My Books"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="horizontal">

                <!-- LinearLayout chứa 3 hình nhỏ -->
                <LinearLayout
                    android:id="@+id/smallImagesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- ImageView cho 3 hình nhỏ -->
                    <ImageView
                        android:id="@+id/imageViewBook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/book_login"
                        android:onClick="onSmallImageClick"
                        android:tag="book" />

                    <ImageView
                        android:id="@+id/imageViewBell"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bell"
                        android:onClick="onSmallImageClick"
                        android:tag="bell" />

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        android:onClick="onSmallImageClick"
                        android:tag="profile" />
                </LinearLayout>

                <!-- LinearLayout chứa hình lớn -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <!-- ImageView cho hình lớn -->
                    <ImageView
                        android:id="@+id/bigImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/book_login" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhớ một thời ta đã quên"
                android:textStyle="bold"
                android:textColor="#6D1683"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author_l_ng_c_c"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginBottom="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_marginEnd="10sp"
                    android:id="@+id/textViewQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Số lượng: "
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/buttonDecrease"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <NumberPicker
                        android:id="@+id/numberPicker"
                        android:layout_width="52dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/buttonIncrease"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="+" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/buttonPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Mua" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="15sp"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Mô Tả" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NMTDQ" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
