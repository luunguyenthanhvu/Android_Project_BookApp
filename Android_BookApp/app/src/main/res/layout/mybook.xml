<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Sách của tôi"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- LinearLayout chứa 3 hình nhỏ -->
            <LinearLayout
                android:id="@+id/smallImagesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- ImageView cho 3 hình nhỏ -->
                <ImageView
                    android:id="@+id/imageViewBook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onSmallImageClick"
                    android:src="@drawable/book_login"
                    android:tag="book"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageViewBell"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onSmallImageClick"
                    android:src="@drawable/bell"
                    android:tag="bell"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onSmallImageClick"
                    android:src="@drawable/profile"
                    android:tag="profile"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- LinearLayout chứa hình lớn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- ImageView cho hình lớn -->
                <ImageView
                    android:id="@+id/bigImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book_login" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhớ một thời ta đã quên"
            android:textStyle="bold"
            android:textColor="#6D1683"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/author_l_ng_c_c"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginBottom="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_marginEnd="10sp"
                android:id="@+id/textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Số lượng: "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/buttonDecrease"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="52dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/buttonIncrease"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="+" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Mua" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonMoTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Mô Tả"
                android:textColor="@drawable/button_text_selector"/>

            <Button
                android:id="@+id/buttonChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Chi Tiết"
                android:textColor="@drawable/button_text_selector"/>

            <Button
                android:id="@+id/buttonDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Đánh Giá"
                android:textColor="@drawable/button_text_selector"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <!-- Nội dung sẽ được cập nhật động ở đây -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
