<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="20dp">

    <FrameLayout
        android:layout_width="366dp"
        android:layout_height="150dp"

        android:layout_marginTop="4dp"

        android:background="#F9EBFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/BookItemImageView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/profile" />

        <!-- ConstraintLayout để đặt TextView và icon -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/FantasyItemImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/BookItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="15dp"
            android:text="Book"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"

            android:text="Ciin" />

        <ImageView
            android:id="@+id/iconBelowAuthor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logoc"
            android:layout_marginStart="150dp"
            android:layout_marginTop="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AuthorName" />

        <Button
            android:id="@+id/buttonMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="90dp"
            android:text="BUY 500$" />

    </FrameLayout>
</androidx.cardview.widget.CardView>
