<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Icon Quai lai"
            android:textColor="#808080"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:text="Tìm kiếm"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/vien2">


        <TextView
            android:id="@+id/signup_email"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"

            android:hint="Tìm kiếm"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="210dp"
            android:layout_gravity="center"
            android:src="@drawable/search" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:text="Thể loại"
            android:textSize="18sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:text="Tác giả"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:text="Sách"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hop1"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:background="@drawable/vien2"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            android:drawableTop="@drawable/book_login"/>

        <TextView
            android:id="@+id/hop2"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="2"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/hop1"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop3"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="3"
            android:textSize="18sp"
            android:layout_below="@+id/hop1"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop4"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="4"
            android:textSize="18sp"
            android:layout_below="@+id/hop2"
            android:layout_toRightOf="@+id/hop3"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop5"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="5"
            android:textSize="18sp"
            android:layout_below="@+id/hop3"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop6"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="6"
            android:textSize="18sp"
            android:layout_below="@+id/hop4"
            android:layout_toRightOf="@+id/hop5"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop7"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="7"
            android:textSize="18sp"
            android:layout_below="@+id/hop5"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop8"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_below="@+id/hop6"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/hop7"
            android:background="@drawable/vien2"
            android:gravity="center"
            android:text="8"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hop9"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="9"
            android:textSize="18sp"
            android:layout_below="@+id/hop7"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop10"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="10"
            android:textSize="18sp"
            android:layout_below="@+id/hop8"
            android:layout_toRightOf="@+id/hop9"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop11"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="11"
            android:textSize="18sp"
            android:layout_below="@+id/hop9"
            android:background="@drawable/vien2" />

        <TextView
            android:id="@+id/hop12"
            android:layout_width="195dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="12"
            android:textSize="18sp"
            android:layout_below="@+id/hop10"
            android:layout_toRightOf="@+id/hop11"
            android:background="@drawable/vien2" />

    </RelativeLayout>



</LinearLayout>