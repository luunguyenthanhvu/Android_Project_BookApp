<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên ngân hàng"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chọn ngân hàng"
                android:padding="8dp"
                android:id="@+id/editTextBankName"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên chi nhánh"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Điền tên chi nhánh"
                android:padding="8dp"
                android:id="@+id/editTextBranchName"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tài khoản"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Số tài khoản"
                android:padding="8dp"
                android:id="@+id/editTextAccountNumber"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên chủ tài khoản"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Điền tên đầy đủ"
                android:padding="8dp"
                android:id="@+id/editTextAccountHolderName"
                android:background="@drawable/edit_text_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiết lập tài khoản ngân hàng mặc định"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:textColor="#000000"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchDefaultAccount"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                android:background="?attr/colorPrimary"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/buttonComplete"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
