<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEF4FB"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginBottom="40dp"
        android:theme="?attr/actionBarTheme"
        app:title="Delivery Address"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"

        />

    <com.shuhart.stepview.StepView
        android:id="@+id/stepViewInDeliverAddress"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0"
        android:background="#EEF4FB"
        app:sv_doneTextColor="#B868E9"
        app:sv_nextStepCircleColor="@color/material_dynamic_neutral70"
        app:sv_nextStepLineColor="@color/material_dynamic_neutral70"
        app:sv_nextTextColor="#B868E9"
        app:sv_selectedCircleColor="#6D1683"
        app:sv_selectedTextColor="#B868E9"
        app:sv_stepLineWidth="3dp">

    </com.shuhart.stepview.StepView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddNewAddress"
        android:layout_marginBottom="20dp"
        android:background="@drawable/draw_button_for_my_cart"
        android:text="Add New Address"
        android:textColor="#242629"
        >

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/radio_button_for_delivery_address" />

        <TextView
            android:id="@+id/tv_addressUser"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Name: contact no
door no, strust city
dist, pincode" />

        <Button
            android:id="@+id/btn_editAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_button_for_my_cart"
            android:text="Edit"
            android:textColor="#242629" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonDeliverToThisAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:text="Deliver to this address" />

    </RelativeLayout>

</LinearLayout>